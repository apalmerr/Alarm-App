<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0C0C">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="367dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nombreAlarma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoText="true"
            android:background="#302C2C"
            android:hint="Nombre alarma"
            android:textColor="#EFEDED"
            android:textColorHighlight="#FF3E00"
            android:textColorHint="#FF3D00"
            android:textColorLink="#FF3D00"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/hora"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:background="#302C2C"
        android:text="Hora"
        android:textColorHighlight="#FF3D00"
        android:textColorLink="#FF3D00"
        app:backgroundTint="#302C2C"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <Button
        android:id="@+id/dias"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:background="#302C2C"
        android:text="Repetir"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF3E00"
        android:textColorLink="#FF3D00"
        app:backgroundTint="#302C2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#302C2C"
        android:text="Guardar"
        android:textColor="#FF3D00"
        app:backgroundTint="#302C2C"
        app:iconTint="#FF3E00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>